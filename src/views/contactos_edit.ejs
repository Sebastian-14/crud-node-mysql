<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/update/<%= data.id %>" method="POST">
          <div class="form-group">
            <input type="text" name="name" value="<%= data.name%>" placeholder="Nombre" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="lastname" value="<%= data.lastname%>" placeholder="Apellido" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="cellphone" value="<%= data.cellphone%>" placeholder="Celular" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="city" value="<%= data.city%>" placeholder="Ciudad" class="form-control">
          </div>

          <button type="submit" class="btn btn-success">
            Actualizar contacto
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
